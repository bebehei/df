# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh
export fpath=(~/.zcomplete $fpath)

ZSH_THEME=""

CASE_SENSITIVE="true"
DISABLE_AUTO_UPDATE="true"
DISABLE_LS_COLORS="false"
DISABLE_AUTO_TITLE="true"
ENABLE_CORRECTION="false"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="yyyy-mm-dd"
# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder
plugins=(history git sudo common-aliases colored-man systemd)
source $ZSH/oh-my-zsh.sh

# Liquidprompt #

# if you change settings of liquidprompt, change settings in bashrc, too

#LP_ENABLE_RUNTIME=1
LP_ENABLE_TITLE=1
LP_ENABLE_SSH_COLORS=1
LP_ENABLE_VCS_ROOT=1
LP_DISABLED_VCS_PATH=""
LP_ENABLE_TEMP=0
# if in git folder, the prompt takes very long to rebuild
mountpoint $HOME 2> /dev/null > /dev/null && LP_DISABLED_VCS_PATH="$HOME"
source ~/.liquidprompt/liquidprompt
RPROMPT='[%*]'

# Liquidprompt END #

alias reload=". ~/.zshrc"

source ~/.profile.d/load

ZSH_AUTOSUGGEST_STRATEGY=match_prev_cmd
source ~/.zsh-autosuggestions/zsh-autosuggestions.zsh
#       Ctrl+Space
bindkey '^ ' autosuggest-accept

source ~/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
