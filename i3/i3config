exec --no-startup-id xautolock -time 3 -locker "i3lock -p win -t -i ~/.lockscreen" -notify 15 -notifier 'notify-send -u critical -t 5000 -i screensaver "Locking Screen" "Will Lock Screen in 15s"' -noclose
exec --no-startup-id gajim
exec --no-startup-id redshift -t 6500:4500 -b 1:0.5
exec --no-startup-id keepassx

