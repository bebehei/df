# main commands
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit

# start a terminal
bindsym $mod+Return exec xfce4-terminal

# screensaver
bindsym $mod+z exec ~/bin/locknow
bindsym $mod+y exec ~/bin/locknow

# start dmenu (a program launcher)
bindsym $mod+x exec --no-startup-id i3-dmenu-desktop --entry-type=command
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --display-binary --dmenu='dmenu -f -i'

# kill focused window
bindsym $mod+Shift+q kill

# fullscreen
bindsym $mod+f fullscreen
bindsym $mod+g fullscreen global

# change layouts
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+c layout toggle split
