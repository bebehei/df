general {
        output_format = "i3bar"
        colors = true
        interval = 2
}

order += "disk /home"
order += "disk /"
order += "ipv6"
order += "wireless wlp2s0"
order += "ethernet enp1s0f1"
order += "volume master"
order += "battery 1"
order += "cpu_usage"
order += "cpu_temperature 1"
order += "load"
order += "time"


time {
        format = "%a %d.%m.%Y 🕐%H:%M:%S"
}

disk "/" {
        format = "root: %avail"
}
disk "/home" {
        format = "home: %avail"
}

volume master {
        format = "♪: %volume"
        format_muted = "🔇"
        device = "default"
        mixer = "Master"
}

ipv6 {
	format_up = "%ip"
	format_down = "v6"
}

wireless wlp2s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "wifi"
}

ethernet enp1s0f1 {
        format_up = "E: %ip (%speed)"
        format_down = "eth"
}

battery 1 {
        format = "%status %percentage %remaining %consumption"
        format_down = "No battery"
        status_chr = "⚡"
        status_bat = "🔋"
        status_full = "☻"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 5
				threshold_type = percentage
}

load {
        format = "%1min %5min"
}

cpu_usage {
	format = "CPU: %usage"
}

cpu_temperature 1 {
	format = "%degrees°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp%d_input"
}
